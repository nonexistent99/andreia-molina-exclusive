# Exemplo de arquivo .env para produção na Hostinger
# Copie este arquivo para .env.production e preencha com seus dados reais

# Banco de Dados MySQL (você vai criar na Hostinger)
DATABASE_URL="mysql://usuario:senha@localhost:3306/nome_do_banco"

# Porta do servidor (use 3000 ou outra disponível)
PORT=3000

# URL do seu site (seu domínio ou IP da VPS)
VITE_APP_URL="http://212.85.22.73:3000"

# Chaves de API (copie do ambiente de desenvolvimento)
BREVO_API_KEY="sua_chave_brevo_aqui"
LXPAY_API_KEY="sua_chave_lxpay_aqui"
LXPAY_API_SECRET="seu_secret_lxpay_aqui"

# JWT Secret (gere uma senha forte aleatória)
JWT_SECRET="gere_uma_senha_forte_aleatoria_aqui"

# OAuth (mantenha os mesmos valores do desenvolvimento)
OAUTH_SERVER_URL="https://api.manus.im"
VITE_OAUTH_PORTAL_URL="https://login.manus.im"

# Informações do proprietário
OWNER_NAME="Seu Nome"
OWNER_OPEN_ID="seu_open_id"

# Título e Logo do App
VITE_APP_TITLE="Andreia Molina - Conteúdo Exclusivo"
VITE_APP_LOGO="/logo.png"

# IDs de aplicação
VITE_APP_ID="seu_app_id"

# APIs do Manus (mantenha os mesmos valores)
BUILT_IN_FORGE_API_URL="https://forge.manus.im"
BUILT_IN_FORGE_API_KEY="sua_chave_aqui"
VITE_FRONTEND_FORGE_API_KEY="sua_chave_frontend_aqui"
VITE_FRONTEND_FORGE_API_URL="https://forge.manus.im"

# Analytics (opcional)
VITE_ANALYTICS_ENDPOINT="seu_endpoint_analytics"
VITE_ANALYTICS_WEBSITE_ID="seu_website_id"
